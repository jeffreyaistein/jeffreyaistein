# =============================================================================
# SELF-STYLE PIPELINE
# Automatically generates style guide proposals from AIstein's posted tweets.
# IMPORTANT: Proposals are NEVER auto-activated. Admin approval required.
# IMPORTANT: Emojis and hashtags are ALWAYS forbidden regardless of analysis.
# =============================================================================

# Enable automatic style proposal generation (default: false)
# Set to true to enable the SelfStyleWorker background task
SELF_STYLE_ENABLED=false

# Hours between proposal generation runs (default: 24)
# Recommended: 24-168 hours (1-7 days)
SELF_STYLE_INTERVAL_HOURS=24

# Minimum tweets required to generate a proposal (default: 25)
# If fewer tweets are available, generation is skipped.
# Recommended:
#   - Early days (< 100 total tweets): 10-15
#   - Normal operation: 25-50
#   - Conservative: 50-100
SELF_STYLE_MIN_TWEETS=25

# Maximum tweets to analyze per proposal (default: 500)
# Higher values provide more data but take longer to process.
SELF_STYLE_MAX_TWEETS=500

# Days to look back for tweets (default: 30)
# Only tweets from this window are included in analysis.
# Recommended: 14-60 days (balance recency vs sample size)
SELF_STYLE_DAYS=30

# Include reply tweets in analysis (default: true)
# Set to false to only analyze original/timeline posts.
SELF_STYLE_INCLUDE_REPLIES=true

